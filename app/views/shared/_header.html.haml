.start
  .header
    .header__box
      .header__input__box
        %a.header__image
          = image_tag "fmarket_logo_red.svg", size: "134x36"
        .foom
          %input.search__box{name: "keyword", placeholder: "何かお探しですか？", type: "search", value: ""}/
          %button.header--btn
            -# %i.fa.fa-search
    .header__bottom
      .header__bottom__left
        %a.category{ href: 'http://google.co.jp' }
          カテゴリーから探す
        %a{ href: 'http://google.co.jp' }
          ブランドから探す
      .header__bottom__right
        - if user_signed_in?
          %ul.header__navi
          %li.header__navi__link
          =fa_icon "heart", class:"hert_icon"
          = link_to "いいね！一覧", '#',class:"good"
          -# %i.far.fa-heart
          =fa_icon "bell", class:"bell_icon"
          = link_to "お知らせ", "#" ,class:"menu"
          -# %i.icon-bell
          =fa_icon "check", class:"check_icon"
          = link_to "やることリスト", "#" ,class:"list"
          -# %i.icon-check
          =fa_icon "user", class:"user_icon"
          = link_to "マイページ", mypage_user_path(current_user.id) ,class:"mypage"
        - else
          = link_to new_member_signup_index_path, class: "registration" do
            新規会員登録
          = link_to new_user_session_path, class: "login" do
            ログイン